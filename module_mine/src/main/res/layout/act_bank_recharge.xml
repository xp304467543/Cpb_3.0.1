<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFF3839"
            android:paddingStart="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_14"
            android:paddingBottom="@dimen/sp_10">

            <TextView
                android:id="@+id/tvTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sp_10"
                android:text="请转账到以下账户："
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvBan_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTop"
                tools:text="开户行:  工商银行" />


            <TextView
                android:id="@+id/tvBan_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBan_1"
                tools:text="开户行:  工商银行" />

            <TextView
                android:id="@+id/tvBan_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBan_2"
                tools:text="开户行:  工商银行" />

            <TextView
                android:id="@+id/tvBan_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBan_3"
                tools:text="开户行:  工商银行" />

            <TextView
                android:id="@+id/tvBan_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBan_4" />

            <TextView
                android:id="@+id/tvBan_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBan_5" />


            <com.lib.basiclib.base.round.RoundTextView
                android:id="@+id/copy_1"
                android:layout_width="34dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:text="复制"
                android:textColor="@color/color_FF513E"
                android:textSize="@dimen/sp_10"
                app:layout_constraintBottom_toBottomOf="@+id/tvBan_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvBan_1"
                app:rv_backgroundColor="@color/white"
                app:rv_cornerRadius="5dp" />


            <com.lib.basiclib.base.round.RoundTextView
                android:id="@+id/copy_2"
                android:layout_width="34dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:text="复制"
                android:textColor="@color/color_FF513E"
                android:textSize="@dimen/sp_10"
                app:layout_constraintBottom_toBottomOf="@+id/tvBan_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvBan_2"
                app:rv_backgroundColor="@color/white"
                app:rv_cornerRadius="5dp" />


            <com.lib.basiclib.base.round.RoundTextView
                android:id="@+id/copy_3"
                android:layout_width="34dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:text="复制"
                android:textColor="@color/color_FF513E"
                android:textSize="@dimen/sp_10"
                app:layout_constraintBottom_toBottomOf="@+id/tvBan_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvBan_3"
                app:rv_backgroundColor="@color/white"
                app:rv_cornerRadius="5dp" />


            <com.lib.basiclib.base.round.RoundTextView
                android:id="@+id/copy_4"
                android:layout_width="34dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:text="复制"
                android:textColor="@color/color_FF513E"
                android:textSize="@dimen/sp_10"
                app:layout_constraintBottom_toBottomOf="@+id/tvBan_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvBan_4"
                app:rv_backgroundColor="@color/white"
                app:rv_cornerRadius="5dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_10"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_weight="1"
                android:background="#FFCCCCCC" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请填写您的账户和转账信息"
                android:textSize="@dimen/sp_10" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1"
                android:background="#FFCCCCCC" />

        </LinearLayout>

        <com.lib.basiclib.base.round.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/sp_10"
            android:paddingEnd="@dimen/dp_5"
            app:rv_cornerRadius="@dimen/dp_5"
            app:rv_strokeColor="#FFCCCCCC"
            app:rv_strokeWidth="0.5dp">

            <TextView
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="持 卡 人"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/sp_10"
                android:background="@null"
                android:hint="请输入付款人的真实姓名"
                android:maxLines="1"
                android:textSize="@dimen/sp_13" />
        </com.lib.basiclib.base.round.RoundLinearLayout>

        <com.lib.basiclib.base.round.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/sp_10"
            android:paddingEnd="@dimen/dp_5"
            app:rv_cornerRadius="@dimen/dp_5"
            app:rv_strokeColor="#FFCCCCCC"
            app:rv_strokeWidth="0.5dp">

            <TextView
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="持卡账号"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/rtCardNum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/sp_10"
                android:background="@null"
                android:hint="请输入您的卡号"
                android:inputType="number"
                android:maxLength="22"
                android:maxLines="1"
                android:textSize="@dimen/sp_13" />
        </com.lib.basiclib.base.round.RoundLinearLayout>


        <com.lib.basiclib.base.round.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/sp_10"
            android:paddingEnd="@dimen/dp_5"
            app:rv_cornerRadius="@dimen/dp_5"
            app:rv_strokeColor="#FFCCCCCC"
            app:rv_strokeWidth="0.5dp">

            <TextView
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="转账金额"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etSaveMoney"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/sp_10"
                android:background="@null"
                android:digits="1234567890."
                android:hint="请输入充值金额"
                android:textSize="@dimen/sp_13" />
        </com.lib.basiclib.base.round.RoundLinearLayout>


        <com.lib.basiclib.base.round.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:orientation="horizontal"
            android:paddingStart="@dimen/sp_10"
            android:paddingEnd="@dimen/dp_5"
            app:rv_cornerRadius="@dimen/dp_5"
            app:rv_strokeColor="#FFCCCCCC"
            app:rv_strokeWidth="0.5dp">

            <TextView
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="转账时间"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTimePicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/color_333333"
                android:layout_marginStart="@dimen/sp_10"
                android:drawableEnd="@mipmap/arrow_right"
                android:textSize="@dimen/sp_13" />
        </com.lib.basiclib.base.round.RoundLinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btConfirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/button_red_background"
            android:gravity="center"
            android:text="提交充值"
            android:textColor="@color/white" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>